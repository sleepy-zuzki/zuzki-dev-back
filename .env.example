# Aplicación
HOST=0.0.0.0
PORT=3000
# development | test | production
NODE_ENV=development
# Nivel de log: fatal | error | warn | info | debug | trace | silent
LOG_LEVEL=debug

# Cache
# TTL en segundos y tamaño máximo por default del cache en memoria
CACHE_TTL=5
CACHE_MAX=100

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# TypeORM
TYPEORM_SYNC=false
TYPEORM_LOGGING=false

# SSL:
# - false/0 -> sin SSL
# - true/1  -> SSL simple
# - require -> SSL sin verificación de certificado (útil en algunos PaaS)
POSTGRES_SSL=false

# Supabase Auth (JWT)
# Obtén el secreto en Supabase: Settings → API → JWT Secret
SUPABASE_JWT_SECRET=TOKEN
# Validación opcional del claim 'aud' (por defecto Supabase usa 'authenticated')
SUPABASE_JWT_AUDIENCE=authenticated
# Validación opcional del claim 'iss' (issuer del token)
SUPABASE_JWT_ISSUER=

# Opcional: URL y claves del proyecto si planeas usar el cliente de Supabase desde el backend
SUPABASE_URL=
SUPABASE_ANON_KEY=
# Nunca uses la service role key en frontend; aquí es solo un placeholder de ejemplo
SUPABASE_SERVICE_ROLE_KEY=

# Seeds
# Por seguridad, el seeding se bloquea en producción a menos que lo permitas explícitamente.
# Establécelo a 'true' solo si entiendes las implicaciones.
SEED_ALLOW_IN_PROD=false
